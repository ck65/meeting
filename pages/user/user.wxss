/* pages/user/user.wxss */
.head{
   width: 100%;
   height: 300rpx;
   /* background-image: url('http://confplus.ccnu.edu.cn/zxbwj/resource/img/bg2.png'); 
   background-size: 100% 100%; */
}
.userinfo {
   display: flex;
   flex-direction: column;
   align-items: center;
}

.userinfo-avatar {
   width: 128rpx;
   height: 128rpx;
   margin: 20rpx;
   border-radius: 50%;
}

.userinfo-nickname {
   color: #aaa;
}

.section{
   display: flex;
   flex-direction: column;
   padding: 10rpx;

}
.section-item{
   display: flex;
   flex: 1;
   cursor: pointer;
   /* border: 1rpx solid #aaa; */
   margin-top: 20rpx;
   padding: 30rpx;
}
.section-item image{
   width: 60rpx;
   height: 60rpx;
   margin-right: 20rpx;
}
.section-item text{
   flex: 1;
}
